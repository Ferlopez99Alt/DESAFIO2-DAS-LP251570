@model IEnumerable<ColegioSanJose.Models.Materia>

@{
    ViewData["Title"] = "Materias";
}

<h1>Materias</h1>

<p>
    <a asp-action="Create">Registrar nueva Materia</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nombre Materia
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Docente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreMateria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Docente)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MateriaId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.MateriaId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.MateriaId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
